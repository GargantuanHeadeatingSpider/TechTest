@model UserManagement.Web.Models.Users.UserListItemViewModel

<h2>User Details</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Forename
        </dt>
        <dd class="col-sm-10">
            @Model.Forename
        </dd>
        <dt class="col-sm-2">
            Surname
        </dt>
        <dd class="col-sm-10">
            @Model.Surname
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            Account Active
        </dt>
        <dd class="col-sm-10">
            @(Model.IsActive ? "Yes" : "No")
        </dd>
        <dt class="col-sm-2">
            Date Of Birth
        </dt>
        <dd class="col-sm-10">
            @Model.DateOfBirth.ToShortDateString()
        </dd>
    </dl>
    <a asp-action="List" class="btn btn-primary">Back to List</a>
</div>
